
{
  "entities": {
    "Event": {
      "title": "Event",
      "description": "Represents a betting event on the platform.",
      "type": "object",
      "properties": {
        "question": {
          "type": "string",
          "description": "The question of the event."
        },
        "category": {
          "type": "string",
          "description": "The category of the event."
        },
        "status": {
          "type": "string",
          "description": "The current status of the event.",
          "enum": ["open", "closed", "finished", "canceled"]
        },
        "outcomes": {
          "type": "object",
          "properties": {
            "yes": {
              "type": "number",
              "description": "Total amount staked on YES."
            },
            "no": {
              "type": "number",
              "description": "Total amount staked on NO."
            }
          }
        },
        "totalPool": {
          "type": "number",
          "description": "The total amount of tokens in the pool."
        },
        "participants": {
          "type": "number",
          "description": "The number of participants in the event."
        },
        "endDate": {
          "type": "string",
          "format": "date-time",
          "description": "The end date of the event."
        },
        "winningOutcome": {
          "type": "string",
          "description": "The winning outcome of the event.",
          "enum": ["YES", "NO"]
        },
        "minStake": {
            "type": "number",
            "description": "The minimum stake amount for the event."
        },
        "maxStake": {
            "type": "number",
            "description": "The maximum stake amount for the event."
        }
      },
      "required": ["question", "category", "status", "outcomes", "totalPool", "participants", "endDate", "minStake", "maxStake"]
    },
    "Category": {
        "title": "Category",
        "description": "Represents an event category.",
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "The name of the category."
            },
            "icon": {
                "type": "string",
                "description": "The name of the lucide-react icon for the category."
            }
        },
        "required": ["name", "icon"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/events/{eventId}": {
      "schema": {
        "$ref": "#/entities/Event"
      },
      "description": "Stores all betting events."
    },
    "/categories/{categoryId}": {
        "schema": {
            "$ref": "#/entities/Category"
        },
        "description": "Stores all event categories."
    }
  }
}
